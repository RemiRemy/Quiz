{% extends 'base.html.twig' %}

{% block title %}Liste des questions{% endblock %}

{% block body %}
    <h1>Liste des questions</h1>
    <a href="{{ path('admin_question_add') }}">Ajouter une question</a>
    <table>
        <thead>
        <tr>
            <th>#</th>
            <th>Question</th>
            <th>Catégories</th>
            <th>Utilisateur</th>
            <th>Activé ?</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            {% for question in questionList %}
                <tr>
                    <td>{{ question.id }}</td>
                    <td>{{ question.statement }}</td>
                    <td>{{ question.categories | map(c => question.firstCategory.id == c.id ? "<strong>#{c.label}</strong>" : c.label) | join(', ') | raw}}</td>
                    <td>{{ question.user.pseudo ?? "" }}</td>
                    <td>{{ question.status ? "oui" : "non" }}</td>
                    <td>
                        <a href="{{ path('admin_question_edit', {question: question.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}